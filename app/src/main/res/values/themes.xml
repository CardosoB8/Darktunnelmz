<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--
        DarkTunnel VPN - Themes
        =======================
        Material3 themes for Light and Dark modes
    -->
    
    <!-- ==================== BASE THEME ==================== -->
    
    <style name="Theme.DarkTunnel" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_dark</item>
        
        <!-- Secondary/Accent Colors -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryContainer">@color/accent_light</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSecondaryContainer">@color/accent_dark</item>
        
        <!-- Tertiary Colors -->
        <item name="colorTertiary">@color/info</item>
        <item name="colorTertiaryContainer">@color/info_light</item>
        <item name="colorOnTertiary">@android:color/white</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error</item>
        <item name="colorErrorContainer">@color/error_light</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- Surface Colors -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorSurfaceVariant">@color/card_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/border_light</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_light</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.DarkTunnel.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.DarkTunnel.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.DarkTunnel.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DarkTunnel.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.DarkTunnel.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.DarkTunnel.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.DarkTunnel.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.DarkTunnel.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.DarkTunnel.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DarkTunnel.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DarkTunnel.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DarkTunnel.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.DarkTunnel.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.DarkTunnel.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.DarkTunnel.LabelSmall</item>
        
        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DarkTunnel.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DarkTunnel.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DarkTunnel.Large</item>
        
        <!-- Default Font -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- ==================== DARK THEME ==================== -->
    
    <style name="Theme.DarkTunnel.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_dark</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorOnPrimaryContainer">@color/primary_light</item>
        
        <!-- Secondary/Accent Colors -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryContainer">@color/accent_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <item name="colorOnSecondaryContainer">@color/accent_light</item>
        
        <!-- Error Colors -->
        <item name="colorError">@color/error_light</item>
        <item name="colorErrorContainer">@color/error_dark</item>
        <item name="colorOnError">@android:color/white</item>
        
        <!-- Surface Colors -->
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <item name="colorSurfaceVariant">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary_dark</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_dark</item>
        
        <!-- Outline -->
        <item name="colorOutline">@color/border_dark</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/background_dark</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Typography -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.DarkTunnel.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.DarkTunnel.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.DarkTunnel.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.DarkTunnel.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.DarkTunnel.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.DarkTunnel.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.DarkTunnel.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.DarkTunnel.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.DarkTunnel.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.DarkTunnel.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.DarkTunnel.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.DarkTunnel.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.DarkTunnel.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.DarkTunnel.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.DarkTunnel.LabelSmall</item>
        
        <!-- Shape Appearance -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.DarkTunnel.Small</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.DarkTunnel.Medium</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.DarkTunnel.Large</item>
        
        <!-- Default Font -->
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- ==================== TYPOGRAPHY ==================== -->
    
    <!-- Display -->
    <style name="TextAppearance.DarkTunnel.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- Headline -->
    <style name="TextAppearance.DarkTunnel.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <!-- Title -->
    <style name="TextAppearance.DarkTunnel.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <!-- Body -->
    <style name="TextAppearance.DarkTunnel.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    
    <!-- Label -->
    <style name="TextAppearance.DarkTunnel.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    
    <style name="TextAppearance.DarkTunnel.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="fontFamily">@font/roboto_medium</item>
