<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <!--
        DarkTunnel VPN Data Extraction Rules
        ====================================
        Controls what data can be extracted from the app
        for backup and restore operations
    -->
    
    <cloud-backup>
        <!-- Exclude all sensitive data from cloud backup -->
        <exclude domain="sharedpref" path="darktunnel_secure_prefs.xml"/>
        <exclude domain="sharedpref" path="darktunnel_regular_prefs.xml"/>
        <exclude domain="file" path="."/>
        <exclude domain="database" path="."/>
        <exclude domain="root" path="."/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Exclude sensitive data from device-to-device transfer -->
        <exclude domain="sharedpref" path="darktunnel_secure_prefs.xml"/>
        <exclude domain="file" path="credentials/"/>
        <exclude domain="file" path="profiles/"/>
        
        <!-- Allow regular preferences to be transferred -->
        <include domain="sharedpref" path="darktunnel_regular_prefs.xml"/>
    </device-transfer>
    
</data-extraction-rules>
