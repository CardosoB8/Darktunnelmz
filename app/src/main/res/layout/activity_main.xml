<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="DS TUNNEL"
            android:textSize="16sp"
            android:textColor="#008DCD"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <!-- Top Controls Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="SSH"
                    android:textSize="12sp"
                    android:textColor="#008DCD" />

                <Spinner
                    android:id="@+id/spinner1_metodo_choose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:id="@+id/ivSettings"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_settings"
                    android:padding="8dp"
                    android:background="@drawable/circle_background_blue"
                    android:layout_marginEnd="4dp" />

                <ImageView
                    android:id="@+id/ivReset"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_reset"
                    android:padding="8dp"
                    android:background="@drawable/circle_background_blue" />
            </LinearLayout>

            <!-- SSH Connection Fields -->
            <LinearLayout
                android:id="@+id/layout_ssh_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Host:Porta"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/edittext_host"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:hint="ex: in6.vpnjantit.com:22"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usuário"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/edittext_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:hint="usuário"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senha"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/edittext_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:hint="senha"
                    android:inputType="textPassword"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <!-- SSL/TLS Fields (aparece quando selecionado) -->
            <LinearLayout
                android:id="@+id/layout_tls_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certificado TLS (opcional)"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <EditText

        <!-- SNI (apenas para TLS) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center_horizontal"
            android:text="SNI"
            android:textSize="12sp"
            android:textColor="#008DCD"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edittext2sni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="12sp"
            android:hint="m.facebook.com"
            android:background="@drawable/edittext_background" />
                    android:id="@+id/edittext_tls_cert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:hint="caminho do certificado"
                    android:background="@drawable/edittext_background" />
            </LinearLayout>

            <!-- Proxy Fields (aparece quando selecionado) -->
            <LinearLayout
                android:id="@+id/layout_proxy_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proxy"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/edittext_proxy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:textSize="12sp"
                    android:hint="10.100.100.100:80"
                    android:background="@drawable/edittext_background"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Proxy"
                    android:textSize="12sp"
                    android:textColor="#008DCD"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/spinner_proxy_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_background" />
            </LinearLayout>

            <!-- Payload -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="Payload"
                android:textSize="12sp"
                android:textColor="#008DCD"
                android:layout_marginTop="8dp" />

            <EditText
                android:id="@+id/edittext1payload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:hint="GET / HTTP/1.1[crlf]Host: [host][crlf]User-Agent: [ua][crlf][crlf]"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

