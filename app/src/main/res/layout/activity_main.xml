<!--                 android:layout_height="wrap_content" -->
<!--                 android:padding="8dp" -->
<!--                 android:gravity="center_horizontal" -->
<!--                 android:text="SNI" -->
<!--                 android:textSize="12sp" -->
<!--                 android:textColor="#008DCD" /> -->
