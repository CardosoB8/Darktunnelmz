<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="DS TUNNEL"
            android:textSize="16sp"
            android:textColor="#008DCD"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <!-- Top Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="SSH"
                android:textSize="12sp"
                android:textColor="#008DCD" />

            <Spinner
                android:id="@+id/spinner1_metodo_choose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <Spinner
                android:id="@+id/spinner2_import_or_export_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings"
                android:padding="8dp"
                android:background="@drawable/circle_background_blue" />

            <ImageView
                android:id="@+id/ivReset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_reset"
                android:padding="8dp"
                android:background="@drawable/circle_background_blue" />
        </LinearLayout>

        <!-- Input Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <!-- Payload -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="Payload"
                android:textSize="12sp"
                android:textColor="#008DCD" />

            <EditText
                android:id="@+id/edittext1payload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:hint="GET / HTTP/1.1[crlf]Host: [host][crlf]User-Agent: [ua][crlf][crlf]"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <!-- SNI -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="SNI"
                android:textSize="12sp"
                android:textColor="#008DCD" />

            <EditText
                android:id="@+id/edittext2sni"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:hint="m.facebook.com"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <!-- Proxy -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="Proxy"
                android:textSize="12sp"
                android:textColor="#008DCD" />

            <EditText
                android:id="@+id/edittext3proxy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="12sp"
                android:hint="10.100.100.100:80"
                android:background="@drawable/edittext_background" />
        </LinearLayout>

        <!-- Logs -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Logs"
            android:textSize="12sp"
            android:textColor="#008DCD" />

        <ScrollView
            android:id="@+id/vscroll1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"
            android:background="#F5F5F5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview8logs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text=""
                    android:textSize="12sp"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </ScrollView>

        <!-- Connect Button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="CONNECT"
            android:textColor="#FFFFFF"
            android:backgroundTint="#008DCD"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
