<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundLight">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="@string/title_payload_generator"
        app:titleTextColor="@color/textWhite"
        app:navigationIcon="@drawable/ic_back" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_horizontal_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Placeholders Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_placeholders"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="@dimen/input_margin" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:useDefaultMargins="true">

                        <Button
                            android:id="@+id/btnInsertHost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[host]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertPort"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[port]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertMethod"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[method]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertProtocol"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[protocol]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertCrlf"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[crlf]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertCrlf2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[crlf2]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertUa"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[ua]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnInsertRaw"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:text="[raw]"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.OutlinedButton" />
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Payload Editor Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payload"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="@dimen/input_margin" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/InputStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPayloadEditor"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                            android:scrollbars="vertical"
                            android:fontFamily="monospace" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/input_margin">

                        <Button
                            android:id="@+id/btnPreview"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="@string/btn_preview"
                            style="@style/Widget.Material3.Button.OutlinedButton" />

                        <Button
                            android:id="@+id/btnApplyPayload"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/btn_apply_payload"
                            style="@style/Widget.Material3.Button" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Examples Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_margin"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_examples"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="@dimen/input_margin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONNECT (HTTP Proxy):"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvExampleConnect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_connect"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="monospace"
                        android:background="@color/inputBackground"
                        android:padding="8dp"
                        android:layout_marginBottom="@dimen/input_margin"
                        android:textColor="@color/textPrimary" />

                    <Button
                        android:id="@+id/btnUseExampleConnect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usar este exemplo"
                        android:layout_marginBottom="@dimen/input_margin"
                        style="@style/Widget.Material3.Button.TextButton" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GET Request:"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/textSecondary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvExampleGet"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_get"
                        android:textSize="@dimen/text_size_small"
                        android:fontFamily="monospace"
                        android:background="@color/inputBackground"
                        android:padding="8dp"
                        android:layout_marginBottom="@dimen/input_margin"
                        android:textColor="@color/textPrimary" />

                    <Button
                        android:id="@+id/btnUseExampleGet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Usar este exemplo"
                        style="@style/Widget.Material3.Button.TextButton" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Preview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPreview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/corner_radius"
                app:cardElevation="@dimen/elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pré-visualização"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:layout_marginBottom="@dimen/input_margin" />

                    <TextView
                        android:id="@+id/tvPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:textSize="@dimen/text_size_small"
                        android:background="@color/inputBackground"
                        android:padding="8dp"
                        android:textColor="@color/textPrimary" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
